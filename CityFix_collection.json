            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "",
                  "pm.test(\"Status 200\", function () { pm.response.to.have.status(200); });",
                  "var j = {}; try { j = pm.response.json() || {}; } catch(e) {}",
                  "var t = j.token || j.accessToken || j.jwt || (j.data && j.data.token);",
                  "if (t) pm.environment.set(\"token\", t);"
                ]
              }
