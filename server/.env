NODE_ENV=development
PORT=5000

CLIENT_URL=http://localhost:3000
PRODUCTION_URL=https://cityfix.com
MONGODB_URI=mongodb+srv://cityfix_admin:cityFix12345@cluster0.z2x8jip.mongodb.net/cityfix?retryWrites=true&w=majority&appName=Cluster0
JWT_SECRET=cityfix-super-secret-key-change-this-in-production-2024
JWT_EXPIRE=30d

# OpenAI API (Required for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Redis (Optional - for caching)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=CityFix <noreply@cityfix.com>

# Frontend URL
CLIENT_URL=http://localhost:5500
FRONTEND_URL=http://localhost:5500

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ar,he,ru

# Features Flags
ENABLE_AI_FEATURES=true
ENABLE_TRANSLATIONS=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true

# AWS S3 (Optional - for cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET_NAME=

# Push Notifications (Optional)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_LOGGING=true

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-change-this

# Timezone
DEFAULT_TIMEZONE=UTC

# Performance
ENABLE_COMPRESSION=true
ENABLE_CORS=true

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30